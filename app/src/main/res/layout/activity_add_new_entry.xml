<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/edit_round_bg"
    android:layout_margin="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="30sp"
            android:text="Add new entry "
            android:fontFamily="@font/sen_bold"
            android:textColor="#000000"
            android:textSize="24sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

              <EditText
                  android:layout_width="match_parent"
                  android:layout_height="52dp"
                  android:hint="Name of product"
                  android:padding="5dp"
                  android:drawableLeft="@drawable/ic_height"
                  android:drawablePadding="5dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:textSize="20sp"
                  android:background="@drawable/edit_round"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Product type"
                    android:padding="6dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_number"
                    android:drawablePadding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_round"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Quantity"
                    android:padding="6dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_height"
                    android:drawablePadding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_round"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Free"
                    android:padding="6dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_money"
                    android:drawablePadding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_round"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="Expiry"
                    android:padding="6dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_height"
                    android:drawablePadding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_round"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Descriptions"
                    android:gravity="fill_horizontal"
                    android:padding="15dp"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_right"

                    android:drawablePadding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_round"/>
                <Button
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <Button
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button"
                    android:text="Close"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>